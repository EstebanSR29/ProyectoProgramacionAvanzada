@model List<ProyectoG6.BaseDatos.ConsultarFacturas_Result>
@{
    ViewBag.Title = "ConsultarFacturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-center my-4">
    <i class="fa fa-history"></i> Historial de Compras
</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            @if (Model == null || !Model.Any())
            {
                <br />
                <br />
                <br />
                <div class="container text-center mt-5">
                    <h2 class="text-center my-4">
                        <i class="fa fa-receipt"></i> Sin Facturas
                    </h2>
                    <p>Al realizar compras aquí se mostrara el historial de compra.</p>
                    <a href="@Url.Action("MostrarProductos", "Home")" class="btn btn-primary">
                        <i class="fa fa-shopping-cart"></i> Ir a la tienda
                    </a>
                </div>
                <br />
                <br />
                <br />
                <br />
            }
            else
            {
                <div class="table-responsive">
                    <table id="tablaFactura" class="table table-striped table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr class="text-center">
                                <th>Código</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Imprimir</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.IdMaestro</td>
                                    <td class="text-center">@item.FechaCompra.ToString("dd/MM/yyyy HH:mm tt")</td>
                                    <td class="text-center">₡ @item.Total.ToString("N2")</td>
                                    <td class="text-center">
                                        <a class="btn btn-primary" href="@Url.Action("FacturaDetalle", "Carrito", new { IdUsuario = item.IdMaestro })">
                                            <i class="fa fa-print"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<br />
<br />
