@model ProyectoG6.Entidades.Contacto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contacto";
}

<section class="contact-us-section py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 mb-3">Contáctanos</h1>
                <p class="lead text-muted">
                    "Nos encantaría saber de ti. Llena el formulario a continuación y nos pondremos en contacto contigo lo antes posible."
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="p-4 border rounded shadow-sm bg-white">
                    @using (Html.BeginForm("EnviarMensaje", "Contacto", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <input type="hidden" id="IdUsuario" name="IdUsuario" value="@Session["IdUsuario"]" />
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Asunto, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Asunto, new { @type = "text", @class = "form-control", required = "required" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Mensaje, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Mensaje, new { @class = "form-control", rows = "4", required = "required" })
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                        </div>
                    }
                </div>
                @if (Session["RolUsuario"].ToString() == "2")
                {
                    <div class="text-center mt-4">
                        <a href="@Url.Action("MensajesContacto", "Contacto")" class="btn btn-secondary btn-lg">Ver Mensajes</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
