
@model ProyectoG6.Entidades.usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "REGISTRO";
}

<main>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="@Url.Action("Home", "Home")" class="logo d-flex align-items-center w-auto">
                                
                            </a>
                        </div>

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Crear cuenta</h5>
                                    <p class="text-center small">Ingrese su informacion personal para crear la cuenta</p>
                                </div>

                                <form class="row g-3 needs-validation" novalidate>
                                    <div class="col-12">
                                        @Html.TextBoxFor(m => m.Nombre, new {@type = "Nombre",@class="form-control", @placeholder="Nombre"})

                                        <div class="invalid-feedback">Favor, Ingrese su nombre!</div>
                                    </div>

                                    <div class="col-12">
                                        @Html.TextBoxFor(m => m.correo, new { @type ="Correo",@class="form-control",@placeholder="Correo Electronico"})

                                        <div class="invalid-feedback">Favor ingrese y valide su correo electronico!</div>
                                    </div>

                                    

                                    <div class="col-12">
                                        @Html.TextBoxFor(m => m.contrasena, new { @type = "password", @class = "form-control", @placeholder = "Contraseña" })

                                        <div class="invalid-feedback">Favor ingrese su contraseña!</div>
                                    </div>

                                    <div class="col-12">
                                        
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Crear Cuenta</button>
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0">Ya tienes una cuenta? <a href="@Url.Action("", "Home")">Ingresar</a></p>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>

    </div>
</main>