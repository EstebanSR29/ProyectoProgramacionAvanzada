@model ProyectoG6.Entidades.Usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Login";
}
<br />
<section class="p-3 p-md-4 p-xl-5 min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 bg-white text-dark border border-light border-1 rounded-3 shadow-sm">
                <div class="d-flex flex-column justify-content-between h-100 p-4">
                    <h3 class="m-0 text-center mb-4">
                        <span class="text-dark fs-3">¡BIENVENIDO A </span>
                        <span class="text-success fs-3">SPORTSHOP!</span>
                    </h3>
                    <img class="img-fluid rounded mx-auto my-4" loading="lazy" src="~/assets/img/LOGO.png" width="245" height="80" alt="Logo">
                    <p class="mb-0 text-center fs-5">¿No tiene una cuenta? <a href="@Url.Action("Registro", "Login")" class="link-primary text-decoration-none">Crear Cuenta</a></p>
                </div>
            </div>

            <div class="col-12 col-md-6 bsb-tpl-bg-lotion rounded-3 shadow-sm">
                <div class="p-4">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h3 class="text-center">Inicio de Sesión</h3>
                        </div>
                    </div>
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            <div class="col-12">
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show text-center fs-4" role="alert">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <label for="correo" class="form-label fs-5">Correo Electrónico: </label>
                                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control fs-4", required = "required", id = "correo" })
                            </div>
                            <div class="col-12">
                                <label for="password" class="form-label fs-5">Contraseña: </label>
                                @Html.TextBoxFor(m => m.Contrasena, new { @type = "password", @class = "form-control fs-4", required = "required", id = "password" })
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn bsb-btn-xl btn-primary fs-4" type="submit">Iniciar Sesión</button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row mt-4">
                        <div class="col-12">
                            <hr class="mt-4 mb-4 border-secondary-subtle">
                            <div class="text-end">
                                <a href="@Url.Action("RecuperarContrasenna", "Login")" class="link-danger text-decoration-none fs-5">¿Olvidó su contraseña?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
