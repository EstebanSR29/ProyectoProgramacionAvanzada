@model List<ProyectoG6.BaseDatos.Usuarios>
@{
    ViewBag.Title = "PerfilUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Perfil de Usuario</h2>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-lg">
                    <div class="card-body">
                        <i class="fas fa-user-circle fa-5x mb-3"></i>
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text mb-4"><strong>Correo Electrónico:</strong> @item.Correo</p>
                        <div class="mt-4">
                            <a href="@Url.Action("EditarPerfil", "Login", new { IdUsuario = item.IdUsuario })" class="btn btn-success btn-block mb-2">
                                <i class="fa fa-pencil-alt"></i> Editar
                            </a>
                        </div>
                        <div class="mt-4">
                            <a href="@Url.Action("CambiarContrasenna", "Login")" class="btn btn-primary btn-block mb-2">
                                <i class="fas fa-key"></i> Cambiar Contraseña
                            </a>
                        </div>
                        <div class="mt-4">
                            <a href="@Url.Action("CerrarSesion", "Login")" class="btn btn-danger btn-block">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                            </a>
                        </div>
                    </div>
                    </div>
            </div>
        }
    </div>
</div>