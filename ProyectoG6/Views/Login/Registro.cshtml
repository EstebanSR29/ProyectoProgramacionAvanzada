@model ProyectoG6.Entidades.Usuario
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "REGISTRO";
}

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">


                    <div class="d-flex justify-content-center py-4">
                        <a class="logo d-flex align-items-center w-auto">
                            <img src="~/assets/img/LOGO.png" class="logo-img"/>
                        </a>
                    </div>

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Registro</h5>
                            </div>

                            @using (Html.BeginForm("Registro", "Login", new { @class = "row g-3 needs-validation", novalidate = "novalidate" }))
                            {
                                <div class="col-12">
                                    @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control", @placeholder = "Nombre", required = "required" })
                                </div>
                                <br />

                                <div class="col-12">
                                    @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo Electrónico", required = "required" })
                                </div>
                                <br />

                                <div class="col-12">
                                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", @placeholder = "Contraseña", required = "required" })
                                </div>
                                <br />

                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Crear Cuenta</button>
                                </div>
                                <br />

                                <div class="col-12">
                                    <p class="small mb-0">¿Ya tienes una cuenta? <a href="@Url.Action("Index", "Login")">Ingresar</a></p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>